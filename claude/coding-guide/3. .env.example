# ============================================
# FILE 1: .env.example (Root)
# Copy to .env and update with your values
# ============================================

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=admin
DB_PASS=secret
DB_NAME=chatai
DB_SSL=false

# JWT & Auth
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=3600
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRY=604800

# OAuth Providers
AUTH_GOOGLE_ID=your-google-client-id
AUTH_GOOGLE_SECRET=your-google-client-secret
AUTH_FACEBOOK_ID=your-facebook-app-id
AUTH_FACEBOOK_SECRET=your-facebook-app-secret
AUTH_TIKTOK_ID=your-tiktok-client-id
AUTH_TIKTOK_SECRET=your-tiktok-client-secret

# External AI APIs
OPENAI_API_KEY=sk-your-openai-key
GROK_API_KEY=your-grok-key
GEMINI_API_KEY=your-gemini-key

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Storage (MinIO / S3)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=chatai-files
S3_USE_SSL=false

# Message Queue (RabbitMQ)
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Backend Ports
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
CHAT_SERVICE_PORT=3003
AGENT_SERVICE_PORT=3004
BILLING_SERVICE_PORT=3005
ML_SERVICE_PORT=8000

# Node Environment
NODE_ENV=development

# Database Logging
DB_LOGGING=true
DB_SYNCHRONIZE=false

# Microservices Discovery
ENABLE_SERVICE_DISCOVERY=false
SERVICE_REGISTRY_URL=http://localhost:8500

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Security
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000,http://localhost:3001-3005
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe (optional, for billing)
STRIPE_API_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_test_your_secret

# Email Service (for notifications)
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@chatai.local

# Voice/STT
WHISPER_API_ENDPOINT=http://localhost:8000/transcribe
STT_LANGUAGE=en

# ML Training
ML_MODEL_PATH=/models
ML_DEVICE=cpu
ML_BATCH_SIZE=32
ML_EPOCHS=3
ML_LEARNING_RATE=2e-5

# Admin credentials for initial setup
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123

# Feature Flags
FEATURE_VOICE_ENABLED=true
FEATURE_FILE_UPLOAD_ENABLED=true
FEATURE_SELF_HOSTED_AGENTS_ENABLED=true
FEATURE_ML_TRAINING_ENABLED=true
